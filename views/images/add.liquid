{% layout "default-layout.liquid" %}
{% block content %}

    <div class="container-fluid">
        <!-- card-container section -->
        <div class="card-body p-4">
            <!-- display message section-->
            {% if  message.message == "Image added succesfully" %}
            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                Image added succesfully!
                <button 
                    class="btn-close" 
                    type="button" 
                    data-bs-dismiss="alert" 
                    aria-label="close">
                </button>
            </div>
            {% endif %}
            <!-- end of display message section -->

            <!-- form section -->
            <form action="/images/add" method="POST" enctype="multipart/form-data" id="add-form">
                <legend>Image upload</legend>
                <div class="mb-3">
                    <label for="image" class="form-label">Select Image</label>
                    <input 
                        class="form-control form-control-lg" 
                        type="file" 
                        name="image" 
                    />
                </div>
                <div class="mb-3 d-grid">
                    <input 
                        type="submit" 
                        name ="submit" 
                        value="upload image" 
                        class="btn btn-danger"
                    >
                </div>
            </form>
            <!-- end of form section -->
        </div>
        <!-- end of card-container section -->
    </div>

    <!-- style css -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Montserrat:wght@600&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500&family=Roboto:ital,wght@0,400;0,500;1,500&family=Work+Sans:ital,wght@0,200;0,300;1,200;1,300&display=swap');

        nav {
            height: 65px;
            font-family: 'Open Sans', sans-serif;
        }

        .navbar-brand {
            color: bisque;
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
        }

        #navbarNav .new-link,.nav-link {
            margin: 10px;
            font-family: 'Open Sans', sans-serif;
            font-size: 18px;
            text-decoration: none;
            color: rgb(220, 245, 230);
        }

        .btn {
            margin-top: 15px;       
        } 
    </style>
    <!-- end of style css -->
{% endblock %}